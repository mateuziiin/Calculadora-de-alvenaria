# === Fun√ß√£o principal ===
def calcular_alvenaria_interativa(comprimento, altura, tipo_tijolo):
    tipos_tijolos = {
        "Tijolo Baiano": {"comprimento": 0.39, "altura": 0.19, "espessura": 0.09, "preco": 1.00},
        "Bloco de Concreto": {"comprimento": 0.39, "altura": 0.19, "espessura": 0.14, "preco": 4.00},
        "Tijolo Maci√ßo": {"comprimento": 0.20, "altura": 0.10, "espessura": 0.05, "preco": 2.00}
    }

    tijolo = tipos_tijolos[tipo_tijolo]
    tijolo_comprimento = tijolo["comprimento"]
    tijolo_altura = tijolo["altura"]
    espessura_parede = tijolo["espessura"]
    preco_tijolo = tijolo["preco"]

    # Constantes
    junta_altura = 0.01
    preco_saco_cimento = 35.00
    preco_areia_m3 = 120.00
    custo_mao_obra_m2 = 80.00

    # C√°lculos
    area = comprimento * altura
    altura_fiada = tijolo_altura + junta_altura
    num_fiadas = round(altura / altura_fiada)
    tijolos_por_fiada = round(comprimento / tijolo_comprimento)
    total_tijolos = int(num_fiadas * tijolos_por_fiada * 1.1)
    volume_parede = comprimento * altura * espessura_parede
    volume_argamassa = 0.20 * volume_parede
    volume_cimento = volume_argamassa / 7
    volume_areia = volume_argamassa - volume_cimento
    volume_saco_cimento = 0.035
    sacos_cimento = volume_cimento / volume_saco_cimento
    custo_tijolos = total_tijolos * preco_tijolo
    custo_cimento = sacos_cimento * preco_saco_cimento
    custo_areia = volume_areia * preco_areia_m3
    custo_mao_obra = area * custo_mao_obra_m2
    custo_total = custo_tijolos + custo_cimento + custo_areia + custo_mao_obra
    custo_por_m2 = custo_total / area

    # === Exibi√ß√£o dos resultados ajustada ===
    display(HTML(f"""
    <div class='resultado-card'>
        <h3>üß± {tipo_tijolo}</h3>

        <div class='secao-titulo'>üìê Dimens√µes</div>
        <div class='linha'><span>Parede:</span><span class='valor'>{comprimento} m √ó {altura} m</span></div>
        <div class='linha'><span>√Årea total:</span><span class='valor'>{area:.2f} m¬≤</span></div>
        <div class='linha'><span>Fiadas:</span><span class='valor'>{num_fiadas}</span></div>
        <div class='linha'><span>Tijolos por fiada:</span><span class='valor'>{tijolos_por_fiada}</span></div>
        <div class='linha'><span>Total (c/ 10% sobra):</span><span class='valor'>{total_tijolos}</span></div>

        <div class='secao-titulo'>üèó Volume e Materiais</div>
        <div class='linha'><span>Volume parede:</span><span class='valor'>{volume_parede:.2f} m¬≥</span></div>
        <div class='linha'><span>Argamassa:</span><span class='valor'>{volume_argamassa:.2f} m¬≥</span></div>
        <div class='linha'><span>Cimento:</span><span class='valor'>{volume_cimento:.2f} m¬≥ (~{sacos_cimento:.1f} sacos)</span></div>
        <div class='linha'><span>Areia:</span><span class='valor'>{volume_areia:.2f} m¬≥</span></div>

        <div class='secao-titulo'>üí∞ Custos</div>
        <div class='linha'><span>Tijolos:</span><span class='valor'>R$ {custo_tijolos:,.2f}</span></div>
        <div class='linha'><span>Cimento:</span><span class='valor'>R$ {custo_cimento:,.2f}</span></div>
        <div class='linha'><span>Areia:</span><span class='valor'>R$ {custo_areia:,.2f}</span></div>
        <div class='linha'><span>M√£o de obra:</span><span class='valor'>R$ {custo_mao_obra:,.2f}</span></div>

        <div class='total'>üíµ Custo Total: R$ {custo_total:,.2f}</div>
        <div class='sub'>Custo m√©dio por m¬≤: <b>R$ {custo_por_m2:,.2f}/m¬≤</b></div>
    </div>
    """))

# === Widgets ===
tipo_tijolo_widget = widgets.Dropdown(
    options=["Tijolo Baiano", "Bloco de Concreto", "Tijolo Maci√ßo"],
    value="Tijolo Baiano",
    description='üß± Tipo de Tijolo:',
    style={'description_width': 'initial'},
    layout=widgets.Layout(height='35px',width='320px')
)

comprimento_widget = widgets.FloatText(
    value=5.0,
    description='üìè Comprimento (m):',
    step=0.1,
    style={'description_width': 'initial'},
    layout=widgets.Layout(width='320px')
)

altura_widget = widgets.FloatText(
    value=2.5,
    description='üìê Altura (m):',
    step=0.1,
    style={'description_width': 'initial'},
    layout=widgets.Layout(width='320px')
)

botao = widgets.Button(
    description="üî¢ Calcular Alvenaria",
    button_style='success',
    icon='calculator',
    layout=widgets.Layout(width='320px', height='45px')
)

# === A√ß√£o ===
def on_button_click(b):
    calcular_alvenaria_interativa(comprimento_widget.value, altura_widget.value, tipo_tijolo_widget.value)

botao.on_click(on_button_click)

# === Layout final ===
display(Markdown("## üßÆ Simulador Interativo de C√°lculo"))
display(Markdown("Preencha os dados abaixo e clique em Calcular Alvenaria para obter os resultados:"))
box = widgets.VBox([
    tipo_tijolo_widget,
    widgets.HBox([comprimento_widget, altura_widget]),
    botao
])
display(box)
